    <div class="container">
      <div class="row">
        <div class="col-xs-6">
          <h1>
            <%= @invoice.name %>
          </h1>
        </div>
        <div class="col-xs-6 text-right">
          <h1>INVOICE</h1>
          <h1><small>Invoice # <%= @invoice.number  %></small></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-5">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4><%= @invoice.from_name %></h4>
            </div>
            <div class="panel-body">
              <p>
                <%= simple_format @invoice.from_details %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xs-5 col-xs-offset-2 ">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4>To : <%= @invoice.to_name %></h4>
            </div>
            <div class="panel-body">
              <p>
                <%= simple_format @invoice.to_details%>
              </p>
            </div>
          </div>
        </div>
      </div>
      <%= simple_format @invoice.cover %>
      <!-- / end client details section -->
      <table class="table table-bordered">
        <thead>
        <tr>
          <th>
            <h4>Service</h4>
          </th>
          <th>
            <h4>Description</h4>
          </th>
          <th>
            <h4>Qty</h4>
          </th>
          <th>
            <h4>Price</h4>
          </th>
          <th>
            <h4>Sub Total</h4>
          </th>
        </tr>
        </thead>
        <tbody>
        <% @invoice.line_items.each do |l| %>
        <tr>
          <td><%= l.service %></td>
          <td><%= l.description %></td>
          <td class="text-right"><%= l.quantity %></td>
          <td class="text-right"><%= l.price %></td>
          <td class="text-right"><%= l.subtotal %></td>
        </tr>
        <% end  %>
        </tbody>
      </table>
      <div class="row text-right">
        <div class="col-xs-2 col-xs-offset-8">
          <p>
            <strong>
              Sub Total : <br>
              TAX : <br>
              Total : <br>
            </strong>
          </p>
        </div>
        <div class="col-xs-2">
          <strong>
            <%= @invoice.subtotal %> <br>
            <%= @invoice.tax %> <br>
            <%= @invoice.total %> <br>
          </strong>
        </div>
      </div>
    </div>